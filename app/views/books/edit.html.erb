<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
  
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <p class=error-message><%= @book.errors.count %>errors prohibited this book from being saved:</p>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %> 
          <div class="form-group">
            <label>Title</label></br>
              <%= f.text_field :title, class: "form-control book_title" %>
            
	        </div>
          <div class="form-group">
            <label>Body</label></br>
              <%= f.text_area :body, class: "form-control book_body" %></br>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>  
  
        <% end %>
        <%= link_to'Show',book_path(@book.id) %> |
        <%= link_to'Back',books_path %>
    </div>
  </div>
</div>
