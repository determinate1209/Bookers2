<%= render 'books/list', book: @book, user:@user %>
<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td>
      <%= image_tag @books.user.get_profile_image(80,80) %><br>
        <%= link_to user_path(current_user.id) do %>
          <%= @books.user.name %>
        <%end%>
      </td>
      <td>
        <%= @books.title %>
      </td>
      <td>
        <%= @books.body %>
      </td>
      
      <% if @books.user == current_user %>
        <td>
          <%= link_to"Edit", edit_book_path(@books.id) %>
        </td>
        <td>
          <%= link_to "Delete", book_path(@books), method: :delete ,   "data-confirm" => "Are you sureï¼Ÿ" %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>