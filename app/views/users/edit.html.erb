 <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>
 
         <% if @user.errors.any? %>
            <div id="error_explanation">
              <p class=error-message><%= @user.errors.count %>errors prohibited this book from being saved:</p>
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>



          <%= form_with model: @user do |f| %>
            <div class="form-group">
              <label for="inputName">Name</label><br />
              <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control-file user_image" %><br />
            </div>
            <div class="form-group">
              <label for="inputImage">Image</label><br />
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> <br />
            </div>
            <div class="form-group">
              <label>Introduction</label><br />
              <%= f.text_area :introduction, class: "form-control introduction"  %><br />
            </div>
              <%= f.submit "Update User", class: "btn btn-secondary" %>
          <% end %>
      </div>
    </div>
  </div>
          
