
<p id="notice"></p>
<% if flash[:notice] %> 
        <div class="flash">
          <p class="show-text"><%= flash[:notice] %></p>
        </div>
<% end %>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/lists', book: @book, user:@user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th><th>Title</th><th>Opinion</th>
          </tr>
        </thead>
          <% @books.each do |book| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path do %>
                    <%= image_tag book.user.get_profile_image(80,80) %>
                  <% end %>
                </td>
                <td >
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <%end%>
                </td>
                <td >
                  <%= book.body %>
                </td> 
                <td></td>
              </tr>
            </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>